<UserControl x:Class="ExplorerTabUtility.UI.Views.HotKeyProfileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:ExplorerTabUtility.UI.Views"
             xmlns:p="clr-namespace:ExplorerTabUtility.Resources"
             xmlns:m="clr-namespace:ExplorerTabUtility.Models"
             xmlns:converters="clr-namespace:ExplorerTabUtility.UI.Converters"
             mc:Ignorable="d"
             TextBlock.Foreground="{StaticResource TextPrimaryBrush}"
             TextElement.Foreground="{StaticResource TextPrimaryBrush}"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
        <converters:EnumToLocalizedStringConverter x:Key="EnumToLocalizedStringConverter" />
        <converters:ProfileNameConverter x:Key="ProfileNameConverter" />
    </UserControl.Resources>

    <Border Style="{StaticResource ProfileCardStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Main Row -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Enabled Toggle -->
                <ToggleButton x:Name="CbEnabled" Grid.Column="0" Style="{StaticResource ToggleButtonStyle}"
                              VerticalAlignment="Stretch" ToolTip="{x:Static p:Strings.Profile_Enable_Tooltip}" />

                <!-- Name -->
                <TextBox x:Name="TxtName" Grid.Column="1" Tag="{x:Static p:Strings.Profile_Name}" Style="{StaticResource HotkeyTextBoxStyle}"
                         ToolTip="{x:Static p:Strings.Profile_Name_Tooltip}"
                         Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ProfileNameConverter}}" />

                <!-- Hotkeys -->
                <TextBox x:Name="TxtHotKey" Grid.Column="2" Tag="{x:Static p:Strings.Profile_Hotkeys}" Style="{StaticResource HotkeyTextBoxStyle}"
                         ToolTip="{x:Static p:Strings.Profile_Hotkeys_Tooltip}" />

                <!-- Scope -->
                <ComboBox x:Name="CbScope" Grid.Column="3" Style="{StaticResource CustomComboBoxStyle}"
                          ToolTip="{x:Static p:Strings.Profile_Scope_Tooltip}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizedStringConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Action -->
                <ComboBox x:Name="CbAction" Grid.Column="4" Style="{StaticResource CustomComboBoxStyle}" Width="150"
                          ToolTip="{x:Static p:Strings.Profile_Action_Tooltip}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizedStringConverter}}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Expander button -->
                <ToggleButton x:Name="ExpanderToggle" Grid.Column="7" Margin="4, 0" Style="{StaticResource ToggleButtonArrowStyle}"
                              ToolTip="{x:Static p:Strings.Profile_MoreOptions_Tooltip}" />

                <!-- Delete Button -->
                <Button x:Name="BtnDelete" Grid.Column="8" ToolTip="{x:Static p:Strings.Profile_Delete_Tooltip}">
                    <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                          Fill="{Binding Foreground, RelativeSource={RelativeSource AncestorType=Button}}" Stretch="Uniform" Width="16"
                          Height="16" />
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{StaticResource DangerBrush}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Expanded Details -->
            <Grid x:Name="ExpandedPanel" Grid.Row="1" Margin="0, 6, 0, 0"
                  Visibility="{Binding ElementName=ExpanderToggle, Path=IsChecked, Mode=TwoWay, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Path -->
                <TextBox Grid.Column="0" x:Name="TxtPath" Tag="{x:Static p:Strings.Profile_Location}" Style="{StaticResource CustomTextBoxStyle}"
                         ContextMenu="{StaticResource TextBoxCustomContextMenu}"
                         ToolTip="{x:Static p:Strings.Profile_Location_Tooltip}" />

                <!-- Delay -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="6"
                            ToolTip="{x:Static p:Strings.Profile_Delay_Tooltip}">
                    <TextBlock Text="{x:Static p:Strings.Profile_Delay}" VerticalAlignment="Center" Margin="0,0,6,0" />

                    <controls:NumericInputControl x:Name="NDelay"
                                                  Margin="0"
                                                  MinWidth="100"
                                                  Minimum="0"
                                                  Maximum="10000"
                                                  Step="100"
                                                  Suffix="ms"
                                                  StringFormat="{}{0:N0}" />
                </StackPanel>

                <!-- Handled -->
                <ToggleButton Grid.Column="2" x:Name="CbHandled" Content="{x:Static p:Strings.Profile_Handled}" Style="{StaticResource ToggleButtonStyle}" Margin="5,0"
                              ToolTip="{x:Static p:Strings.Profile_Handled_Tooltip}" />

                <!-- Open as Tab -->
                <ToggleButton Grid.Column="3" x:Name="CbOpenAsTab" Content="{x:Static p:Strings.Profile_OpenAsTab}" Style="{StaticResource ToggleButtonStyle}" Margin="5,0"
                              ToolTip="{x:Static p:Strings.Profile_OpenAsTab_Tooltip}" />
            </Grid>
        </Grid>
    </Border>
</UserControl>